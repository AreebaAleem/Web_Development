
<table class="table table-hover">
    <thead style="background-color: #e78df1">
        <tr>
            <th>Order ID</th>
            <th>Customer Name</th>
            <th>Address</th>
            <th>Total Price</th>
            <th>Payment Method</th>
            <th>Is Paid</th>
            <th>Is Delivered</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% if (orders.length === 0) { %>
            <tr>
                <td colspan="8">No Data to Show</td>
            </tr>
        <% } else { %>
            <% for (let index = 0; index < orders.length; index++) { %>
                <tr>
                    <td><%= orders[index]._id %></td>
                    <td><%= orders[index].address.fullName %></td>
                    <td>
                        <%= orders[index].address.address %>,
                        <%= orders[index].address.city %>,
                        <%= orders[index].address.postalCode %>,
                        <%= orders[index].address.country %>
                    </td>
                    <td><%= orders[index].totalPrice %></td>
                    <td><%= orders[index].paymentMethod %></td>
                    <td><%= orders[index].isPaid ? 'Yes' : 'No' %></td>
                    <td><%= orders[index].isDelivered ? 'Yes' : 'No' %></td>
                    <td>
                        <a href="/admin/orders/delete/<%= orders[index]._id %>" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            <% } %>
        <% } %>
    </tbody>
</table>
